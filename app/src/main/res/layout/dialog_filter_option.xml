<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/merah_muda">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_gravity="end"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:background="@drawable/line"/>
    <CheckBox
        android:id="@+id/cbNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layoutDirection="rtl"
        android:layout_gravity="end"/>
    <CheckBox
        android:id="@+id/cbAngkatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angkatan"
        android:layoutDirection="rtl"
        android:layout_gravity="end"/>
    <CheckBox
        android:id="@+id/cbPerusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perusahaan"
        android:layoutDirection="rtl"
        android:layout_gravity="end"/>
    <RadioGroup
        android:id="@+id/rgOption"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <RadioButton
            android:id="@+id/rbAscending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="Ascending"
            android:layout_gravity="end"/>
        <RadioButton
            android:id="@+id/rbDescending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="Descending"
            android:layout_gravity="end"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_submit_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.Button.Colored" />

</LinearLayout>